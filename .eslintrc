{
    "rules": {
    //
    // Style
    //

        "indent": [
            2,
            4
        ],
        "quotes": [
            2,
            "double"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        //
        // ES6
        //

        // suggest using of const declaration for variables that are never modified after declared
        "prefer-const": 1,

        // require space before/after arrow function's arrow
        "arrow-spacing": 0,










    },
    'ecmaFeatures': {
      'modules': true
    },
    "env": {
        "es6": true,
        "node": true
    },
    "extends" : "eslint:recommended"
}